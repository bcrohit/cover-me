{
  "manifest_version": 3,
  "name": "Job Scraper",
  "version": "1.1",
  "description": "Scrapes job details from popular job sites.",
  "permissions": [
    "activeTab",
    "scripting",
    "downloads"
  ],
  "host_permissions": [
    "*://*.linkedin.com/*",
    "*://*.indeed.com/*",
    "*://*.glassdoor.com/*",
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}
